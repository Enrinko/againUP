<!DOCTYPE html>
<html lang="">
<head>
    <meta charset='UTF-8'>
    <title>Тесты всё ок</title>
    <link href="{{ asset('css/_header.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/userCab-main.css') }}" rel="stylesheet"/>
    {{ block('stylesheet', 'auth.html.twig') }}
    {{ block('javascript', 'auth.html.twig') }}
</head>
<body>
<div class="wrapper montserrat">
    {{ block('header', '_header.html.twig') }}
    <div class="main">
        <div class="container text-center">
            <div class="row align-items-start">
                <div class="col">
                    <span>
                        Имя пользователя: {{ username }}
                    </span>
                    <span>
                       Ваш статус: {{ role }}
                    </span>
                    {% if is_granted('ROLE_ADMIN') %}
                        <button href="{{ path('admin') }}">
                            Админ панель
                        </button>
                    {% endif %}
                </div>
                <div class="col">
                    <span>
                       Ваш курс на сайте: {{ course }}
                    </span>
                    <span>
                        пройдено тестов: {{ tests }}
                    </span>
                    <form action="{{ path('logout') }}">
                        <button >
                            Выйти из аккаунта
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>